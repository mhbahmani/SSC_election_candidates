#!/bin/bash

result_file=result.txt
touch $result_file

echo "getting information ..." 

wget -q -O- https://ssc.ce.sharif.edu/election99/ | grep ورودی  >> $result_file

if [ -s $result_file ]; then
	i=0
	while IFS= read -r line
	do
		printf "$((i + 1))- "
		if test $i -eq 0; then
			echo $line | cut -d '>' -f 2 | cut -d '<' -f 1
		else
			echo $line | cut -d '<' -f 1
		fi
		let i+=1
	done < "$result_file"
else
	echo "Wait until the next year election :)"
fi

rm -f $result_file
